{
  "manifest_version": 3,
  "name": "グラレコメーカー - Graphic Recording Maker",
  "short_name": "グラレコ",
  "description": "簡易スケッチを作成し、生成AIで清書。グラフィックレコーディング作成支援ツール。",
  "version": "2.1.0",
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "action": {
    "default_icon": "icon48.png",
    "default_title": "ページをキャプチャ"
  }
}